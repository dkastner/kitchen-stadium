{
  "name": "worker",
  "description": "Stuff needed for a worker (importer, etc) to run",
  "json_class": "Chef::Role",
  "chef_type": "role",

  "run_list": [
    "recipe[company::app_app]",
    "recipe[ruby_build]",
    "recipe[rbenv::user]"
  ],

  "override_attributes": {
    "authorization": {
      "sudo": {
        "groups": ["admin", "sysadmin"],
        "users": ["ubuntu"],
        "passwordless": "true"
      }
    },

    "rbenv" : {
      "rubies": ["1.9.3-p362"],
      "user_installs": [
        {
          "user": "ubuntu",
          "home": "/home/ubuntu",
          "rubies" : ["1.9.3-p362"],
          "user_rubies" : "1.9.3-p362",
          "global" : "1.9.3-p362",
          "gems": {
            "1.9.3-p362": [
              { "name": "bundler" }
            ]
          }
        }
      ]
    }
  }
}
