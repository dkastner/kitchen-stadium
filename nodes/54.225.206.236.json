{
  "chef_environment": "production",

  "run_list": [
    "role[graphite]",
    "role[graphiti]"
  ],

  "override_attributes": {
    "www": {
      "user": "stats",
      "password": "secret"
    },
    "graphiti": {
      "tarfile":  "/usr/src/graphiti.tgz",
      "url":  "https://github.com/paperlesspost/graphiti/tarball/master",
      "graphite_base_url": "http://stats.lan.io",
      "base": "/deploy/graphiti/current",
      "graphite_host": "127.0.0.1",
      "redis_url": "localhost:6379:1/graphiti",
      "tmp_dir": "/tmp/graphiti",
      "metric_prefix": "collectd",
      "default_metrics": ["carbon.agents.*.metricsReceived"],
      "unicorn.timeout": 60,
      "unicorn.cow_friendly": true,
      "s3_bucket": "graphiti",
      "port": "8081",
      "auto_refresh": {
        "enabled": true
      }
    }
  }
}
