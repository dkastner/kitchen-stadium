{
  "run_list": [
    "role[linux]",
    "recipe[company::development_environment]",
    "role[app]",
    "recipe[redisio::install]",
    "recipe[redisio::enable]",
    "recipe[solr]"
  ],

  "set_fqdn": "app.hou",

  "solr": {
    "version": "4.3.0",
    "link": "http://mirrors.ibiblio.org/apache/lucene/solr/4.3.0/solr-4.3.0-src.tgz",
    "checksum": null
  },

  "override_attributes": {
    "postgresql": {
      "config": {
        "listen_address": "*"
      },
      "pg_hba": {
        "type": "hostssl",
        "db": "all",
        "user": "all", 
        "addr": "0.0.0.0/0",
        "method": "md5"
      }
    }
  }
}
